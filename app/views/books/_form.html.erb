<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
        <% book.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :cover_image, "Cover Image", style: "display: block" %>
    <%= form.file_field :cover_image %>
  </div>

  <div>
    <%= form.label :author_id, "Author", style: "display: block" %>
    <%= form.collection_select :author_id, Author.all, :id, :name %>
  </div>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :summary, style: "display: block" %>
    <%= form.text_area :summary %>
  </div>

  <div>
    <%= form.label :publication_date, style: "display: block" %>
    <%= form.date_field :publication_date %>
  </div>

  <div>
    <%= form.label :number_of_sales, style: "display: block" %>
    <%= form.number_field :number_of_sales %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
